///////** common style **//////
body
html
  color #212121  
  font-size 1em
h1
  font-size 2em
h4
  font-size 1.1em

.hide
  display none

.title
  color #fff
  font-weight bold

/*long header style*/
.bottom-header
  height 1%

.long-header
  height 30%
  width 100%
  text-align center
  h1
    margin-top 1.7em
  h4
    margin 0
    width 60%
    text-align center
    color rgb(255, 255, 223)

.has-long-header
  top 31% !important

/*navigation bar style*/
.bar-header
  border 0
.button-clear.button-clear 
  color #fff

/*list style*/
ion-view
  ion-item.item   
    border-color #ff9800


/* Palette generated by Material Palette - materialpalette.com/brown/cyan */

.dark-primary-color    
  background: #0097A7
.default-primary-color 
  background: #00BCD4
.light-primary-color   
  background: #B2EBF2
.text-primary-color    
  color: #FFFFFF
.accent-color          
  color: #FF9800
.primary-text-color    
  color: #212121
.secondary-text-color  
  color: #727272
.divider-color         
  border-color: #B6B6B6
.footer-color
  background: #F4F4F4
.accent-primary-color
  background-color: #FF9800

@media screen and (max-width: 568px)
  h1
    font-size 1.8em
  h4
    font-size .9em

